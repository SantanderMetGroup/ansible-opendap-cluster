LoadModule proxy_module modules/mod_proxy.so
LoadModule proxy_http_module modules/mod_proxy_http.so
LoadModule proxy_ajp_module modules/mod_proxy_ajp.so
LoadModule proxy_ftp_module modules/mod_proxy_ftp.so
LoadModule proxy_balancer_module modules/mod_proxy_balancer.so

{% if  httpd_version[:3] == '2.4' %}
LoadModule slotmem_shm_module modules/mod_slotmem_shm.so
LoadModule lbmethod_byrequests_module modules/mod_lbmethod_byrequests.so
{% endif %}

<Location /status-proxy>
    SetHandler balancer-manager
    Allow from all

{% if mod_proxy_status_user is defined and mod_proxy_status_passwd is defined %}
    AuthType Basic
    AuthName "Restricted Content"
    AuthUserFile {{ httpd_root }}/conf.d/.htpasswd
    Require valid-user
{% endif %}
</Location>

ProxyPass /status-proxy !

<Proxy "balancer://restricted">
ProxySet stickysession=JSESSIONID
</Proxy>
ProxyPass "/thredds/restrictedAccess" "balancer://restricted/thredds/restrictedAccess"

{% for c in clusters -%}
<Proxy "balancer://{{ c.name }}">
ProxySet stickysession=JSESSIONID
</Proxy>
{% for s in c.services -%}
ProxyPass "/thredds/{{ s }}" "balancer://{{ c.name }}/thredds/{{ s }}"
{% if s == "catalog" -%}
ProxyPass "/thredds" "balancer://{{ c.name }}/thredds"
{% endif %}
{% endfor %}

{% endfor %}